<h1>Stocking App</h1>

<% @api %>
<%= form_tag root_path, :method => 'POST' do %>
  <%= text_field_tag 'ticker', nil, placeholder: "Enter Ticker Symbol", size: 50 %>
  <%= submit_tag "Search" %>
<% end %>

<% if @stock %>
  <%= @stock.company_name %>
  <%= @stock.latest_price %>
<% elsif @nothing %>
  <%= @nothing %>
<% end %>
<% if @error %>
  <%= @error %>
<% end %>
